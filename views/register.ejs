<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
            crossorigin="anonymous" />
        <title>Document</title>
    </head>
    <body style="background-color: #202124; color: aliceblue">
        <div class="container">
            <h1>Schedule Appointment</h1>
            <form method="post" action="create" class="needs-validation">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Name</span>
                    <input type="text" class="form-control" name="name" placeholder="Michael Smith" id="name" required/>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Email</span>
                    <input type="text" class="form-control" name="email" placeholder="example@example.com" id="email" required/>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">CPF</span>
                    <input type="text" class="form-control" name="cpf" placeholder="XXX.XXX.XXX-XX" id="cpf" required/>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Phone</span>
                    <input type="text" class="form-control" name="phone" placeholder="(xx)xxxxx-xxxx" id="phone" required/>
                </div>
                <select class="form-select mb-3" name="type" id="type" required>
                    <option selected disabled value="">Type Appointment</option>
                    <option value="Orthopedic">Orthopedic</option>
                    <option value="Neurologist">Neurologist</option>
                    <option value="Pediatric">Pediatric</option>
                </select>
                </select>
                <div class="row">
                    <div class="input-group mb-3 col">
                        <span class="input-group-text" id="basic-addon1">Date</span>
                        <input type="date" class="form-control" name="date" id="date" required/>
                    </div>
                    <div class="input-group mb-3 col">
                        <span class="input-group-text" id="basic-addon1">Time</span>
                        <input type="time" class="form-control" name="time" id="time" required/>
                    </div>
                </div>
                <button class="btn btn-primary">Register</button>
            </form>
        </div>
    </body>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous">
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>

    <script>
        let maskCPF = new Cleave('#cpf', {
            blocks: [3, 3, 3, 2],
            delimiters: ['.', '.', '-'],
            numericOnly: true,
        });

        let maskPhone = new Cleave('#phone', {
            blocks: [0 , 2 , 5 , 4],
            delimiters: ['(', ')', '-'],
            numericOnly: true,
        });

    </script>
</html>
